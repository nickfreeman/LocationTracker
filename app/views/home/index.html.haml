!!!
%html
  %head
    %title BAMRU Location Tracker
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    / Bootstrap
    %link{:href => "//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css", :rel => "stylesheet"}
      %link{:href => "//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css", :rel => "stylesheet"}/
      %link{:href => "http://fonts.googleapis.com/css?family=Abel|Open+Sans:400,600", :rel => "stylesheet"}/
      :css
        /* http://css-tricks.com/perfect-full-page-background-image/ */
        html {
          background: url("http://farm4.staticflickr.com/3678/9071700493_2044321565_h.jpg") no-repeat center center fixed; 
          -webkit-background-size: cover;
          -moz-background-size: cover;
          -o-background-size: cover;
          background-size: cover;
        }

        body {
          padding-top: 20px;
          font-size: 16px;
          font-family: "Open Sans",serif;
          background: transparent;
        }

        h1 {
          font-family: "Abel", Arial, sans-serif;
          font-weight: 400;
          font-size: 40px;
        }

        /* Override B3 .panel adding a subtly transparent background */
        .panel {
          background-color: rgba(255, 255, 255, 0.9);
        }

        .margin-base-vertical {
          margin: 40px 0;
        }

    %body
    .container
      .row
        .col-md-6.col-md-offset-3.panel.panel-default
          %h1.margin-base-vertical Welcome to BAMRU Location Tracker!
          %h2 Sign in
          = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
            %p.input-group
              %span.input-group-addon
                %span.icon-envelope
              = f.email_field :email, :autofocus => true, :placeholder => "Email, ex: bamru@bamru.org", :class => "form-control input-lg"
            %p.input-group
              %span.input-group-addon
                %span.icon-lock  
              = f.password_field :password, :placeholder => "Password", :class => "form-control input-lg"
            - if devise_mapping.rememberable?
              .checkbox
                = f.check_box :remember_me
                = f.label :remember_me
            %p.text-center
              = f.submit "Sign in", :class =>'btn btn-primary btn-lg'
          = render "devise/shared/links"
          .margin-base-vertical
            %small.text-muted
              %a{:href => "http://farm4.staticflickr.com/3678/9071700493_2044321565_h.jpg"}> Background picture by Nick Freeman @flickr
          %p.help-block.text-center
            %small &copy; BAMRU 2013
        / //main content
      / //row
    / //container